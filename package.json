{
    "name": "Demo",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/approuter": "^11.2.1",
        "@sap/audit-logging": "^5.5.4",
        "@sap/cds": "^5",
        "@sap/xsenv": "^3.3.2",
        "@sap/xssec": "^3.2.13",
        "express": "^4",
        "hana-cli": "^3.202207.1",
        "hdb": "^0.18.3",
        "passport": "^0.6.0"
    },
    "scripts": {
        "start": "NODE_ENV=production cds run",
        "watch-hana_app_module": "cds watch --open hana_app_module/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "build": {
            "target": "."
        },
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/hana_app_module"
    ],
    "devDependencies": {
        "@sap/ux-specification": "^1.102.1"
    }
}
